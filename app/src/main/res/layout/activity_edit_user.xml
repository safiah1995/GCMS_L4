<?xml version="1.0" encoding="UTF-8"?>

<LinearLayout android:orientation="vertical" android:layout_height="fill_parent" android:layout_width="fill_parent" xmlns:tools="http://schemas.android.com/tools" xmlns:android="http://schemas.android.com/apk/res/android">

    <include layout="@layout/tool_bar" android:id="@+id/tool_bar"/>

    <LinearLayout android:orientation="vertical" android:layout_height="fill_parent" android:layout_width="fill_parent" android:background="@drawable/background" android:padding="20dp">

        <EditText android:layout_height="wrap_content" android:layout_width="fill_parent" android:id="@+id/etName" android:background="@color/views_background" android:padding="10dp" tools:ignore="RtlCompat" android:textSize="16sp" android:textColorHint="@color/grey" android:textColor="@color/darker_grey" android:textAlignment="textStart" android:singleLine="true" android:hint="الاسم" android:gravity="center_vertical" android:drawableRight="@drawable/blackuser" android:drawablePadding="8dp" android:layout_marginTop="8dp"/>

        <View android:layout_height="1px" android:layout_width="fill_parent" android:background="@color/white_greyish"/>

        <EditText android:layout_height="wrap_content" android:layout_width="fill_parent" android:id="@+id/Email" android:background="@color/views_background" android:padding="10dp" tools:ignore="RtlCompat" android:textSize="16sp" android:textColorHint="@color/grey" android:textColor="@color/darker_grey" android:textAlignment="textStart" android:singleLine="true" android:hint="البريد الإلكتروني" android:gravity="center_vertical" android:drawableRight="@drawable/blackemail" android:drawablePadding="8dp" android:layout_marginTop="5dp" android:inputType="textEmailAddress"/>

        <View android:layout_height="1px" android:layout_width="fill_parent" android:background="@color/white_greyish"/>

        <EditText android:layout_height="wrap_content" android:layout_width="fill_parent" android:id="@+id/etPhone" android:background="@color/views_background" android:padding="10dp" tools:ignore="RtlCompat" android:textSize="16sp" android:textColorHint="@color/grey" android:textColor="@color/darker_grey" android:textAlignment="textStart" android:singleLine="true" android:hint="رقم الجوال" android:gravity="center_vertical" android:drawableRight="@drawable/blackphone" android:drawablePadding="8dp" android:layout_marginTop="5dp" android:inputType="phone"/>

        <View android:layout_height="1px" android:layout_width="fill_parent" android:background="@color/white_greyish"/>

        <View android:layout_height="1px" android:layout_width="fill_parent" android:background="@color/white_greyish"/>


        <LinearLayout
            android:layout_width="233dp"
            android:layout_height="28dp"
            android:layout_gravity="end"
            android:layout_marginBottom="0dp"
            android:layout_marginLeft="10dp"
            android:layout_marginRight="0dp"
            android:layout_marginTop="230dp"
            android:orientation="horizontal">

            <Button

                android:id="@+id/changePassword"
                android:layout_width="wrap_content"
                android:layout_height="30dp"
                android:layout_gravity="end"
                android:layout_margin="10dp"
                android:background="@color/pink"
                android:backgroundTint="@color/pink"
                android:onClick="changePassword"
                android:padding="3dp"
                android:text="تغيير كلمة المرور"
                android:textColor="@color/colorPrimaryDark"
                android:textSize="17sp"
                android:textStyle="bold" />

            <Button
                android:id="@+id/btnEdit"
                android:layout_width="77dp"
                android:layout_height="30dp"
                android:layout_gravity="end"
                android:background="@color/pink"
                android:backgroundTint="@color/pink"
                android:padding="1dp"
                android:text="حفظ"
                android:onClick="save"
                android:textColor="@color/colorPrimaryDark"
                android:textSize="17sp"
                android:textStyle="bold" />

        </LinearLayout>

        <LinearLayout
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_gravity="center"
            android:layout_marginBottom="0dp"
            android:layout_marginTop="10dp"
            android:layout_marginRight="30dp"
            android:orientation="horizontal">

            <Button
                android:id="@+id/logOutBtn"
                android:layout_width="120dp"
                android:layout_height="35dp"
                android:background="@color/pink"
                android:backgroundTint="@color/pink"
                android:text="تسجيل الخروج"
                android:textColor="@color/colorPrimaryDark"
                android:textSize="16sp"
                android:textStyle="bold" />


        </LinearLayout>



    </LinearLayout>

</LinearLayout>