<?xml version="1.0" encoding="UTF-8"?>

    <LinearLayout android:orientation="vertical" android:layout_height="fill_parent" android:layout_width="fill_parent" xmlns:tools="http://schemas.android.com/tools" xmlns:android="http://schemas.android.com/apk/res/android">

    <include layout="@layout/tool_bar" android:id="@+id/tool_bar"/>

    <LinearLayout android:orientation="vertical" android:layout_height="fill_parent" android:layout_width="fill_parent" android:padding="20dp" android:background="@drawable/background">

        <EditText
            android:id="@+id/ID"
            android:layout_width="fill_parent"
            android:layout_height="wrap_content"
            android:layout_marginTop="8dp"
            android:background="@color/views_background"
            android:drawablePadding="8dp"
            android:drawableRight="@drawable/cylinder"
            android:ems="10"
            android:gravity="center_vertical"
            android:hint="رقم الأسطوانة"
            android:inputType="number"
            android:padding="10dp"
            android:singleLine="true"
            android:textAlignment="textStart"
            android:textColor="@color/darker_grey"
            android:textColorHint="@color/grey"
            android:textSize="16sp"
            tools:ignore="RtlCompat" />

    <View android:layout_height="1px" android:layout_width="fill_parent" android:background="@color/white_greyish"/>

        <EditText
            android:id="@+id/NAME"
            android:layout_width="fill_parent"
            android:layout_height="wrap_content"
            android:layout_marginTop="8dp"
            android:background="@color/views_background"
            android:drawablePadding="8dp"
            android:drawableRight="@drawable/cylinder"
            android:ems="10"
            android:gravity="center_vertical"
            android:hint="اسم الأسطوانة"
            android:inputType="textPersonName"
            android:padding="10dp"
            android:singleLine="true"
            android:textAlignment="textStart"
            android:textColor="@color/darker_grey"
            android:textColorHint="@color/grey"
            android:textSize="16sp"
            tools:ignore="RtlCompat" />

    <View android:layout_height="1px" android:layout_width="fill_parent" android:background="@color/white_greyish"/>

    <EditText android:layout_height="wrap_content" android:layout_width="fill_parent" android:id="@+id/TYPE" android:padding="10dp" android:background="@color/views_background" tools:ignore="RtlCompat" android:textSize="16sp" android:textColorHint="@color/grey" android:textColor="@color/darker_grey" android:textAlignment="textStart" android:singleLine="true" android:hint="نوع الأسطوانة" android:gravity="center_vertical" android:ems="10" android:drawableRight="@drawable/cylinder" android:drawablePadding="8dp" android:layout_marginTop="8dp" android:inputType="textPersonName"/>

    <View android:layout_height="1px" android:layout_width="fill_parent" android:background="@color/white_greyish"/>

    <Button android:layout_height="wrap_content" android:layout_width="77dp" android:id="@+id/ADD"
        android:padding="10dp" android:background="@color/pink"
        android:backgroundTint="@color/pink"   android:textSize="17sp"
        android:textColor="@color/colorPrimaryDark" android:layout_marginTop="40dp"
        android:textStyle="bold" android:text="إضافة" android:onClick="register" android:layout_gravity="end"/>

        <Button
            android:id="@+id/logOutBtn"
            android:layout_width="120dp"
            android:layout_height="35dp"
            android:background="@color/pink"
            android:layout_marginTop="150dp"
            android:layout_marginRight="190dp"
            android:backgroundTint="@color/pink"
            android:text="تسجيل الخروج"
            android:textColor="@color/colorPrimaryDark"
            android:textSize="16sp"
            android:textStyle="bold" />

    </LinearLayout>


</LinearLayout>



