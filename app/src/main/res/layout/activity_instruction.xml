<?xml version="1.0" encoding="utf-8"?>

<LinearLayout android:orientation="vertical" android:layout_height="fill_parent" android:layout_width="fill_parent" xmlns:tools="http://schemas.android.com/tools" xmlns:android="http://schemas.android.com/apk/res/android">

    <include layout="@layout/tool_bar" android:id="@+id/tool_bar"/>

    <LinearLayout android:layout_marginTop="0dp" android:orientation="vertical" android:layout_height="fill_parent" android:layout_width="fill_parent" android:padding="5dp" android:background="@drawable/background">

        <EditText android:focusable="false" android:layout_height="wrap_content" android:layout_width="fill_parent" android:id="@+id/ID" android:padding="10dp" android:background="@color/views_background" tools:ignore="RtlCompat" android:textSize="16sp" android:textColorHint="@color/grey" android:textColor="@color/darker_grey" android:textAlignment="textStart"  android:hint="تجنب إشعال الولاعات أو أي مصادر للنار ولا تضغط على أي مفتاح كهربائي" android:inputType="textMultiLine" android:singleLine="false" android:gravity="center_vertical" android:ems="10" android:drawableRight="@drawable/inss" android:drawablePadding="8dp" android:layout_marginTop="8dp"/>

        <View android:layout_height="1px" android:layout_width="fill_parent" android:background="@color/white_greyish"/>

        <EditText

            android:inputType="textMultiLine" android:singleLine="false"
            android:layout_width="fill_parent"
            android:layout_height="wrap_content"
            android:layout_marginTop="8dp"
            android:background="@color/views_background"
            android:drawablePadding="8dp"
            android:drawableRight="@drawable/inss"
            android:ems="10"
            android:gravity="center_vertical"
            android:focusable="false"
            android:hint="ابتعد عن الأجهزة الكهربائية التي يمكن أن تصدر شرارة"

            android:padding="10dp"

            android:textAlignment="textStart"
            android:textColor="@color/darker_grey"
            android:textColorHint="@color/grey"
            android:textSize="16sp"
            tools:ignore="RtlCompat" />

        <View android:layout_height="1px" android:layout_width="fill_parent" android:background="@color/white_greyish"/>

        <EditText android:inputType="textMultiLine" android:focusable="false" android:singleLine="false" android:layout_height="wrap_content" android:layout_width="fill_parent"  android:padding="10dp" android:background="@color/views_background" tools:ignore="RtlCompat" android:textSize="16sp" android:textColorHint="@color/grey" android:textColor="@color/darker_grey" android:textAlignment="textStart"  android:hint="فتح الأبواب والنوافذ لتشتيت الغاز المتسرب" android:gravity="center_vertical" android:ems="10" android:drawableRight="@drawable/inss" android:drawablePadding="8dp" android:layout_marginTop="8dp" />

        <View android:layout_height="1px" android:layout_width="fill_parent" android:background="@color/white_greyish"/>

        <EditText android:focusable="false" android:inputType="textMultiLine" android:singleLine="false" android:layout_height="wrap_content" android:layout_width="fill_parent"  android:padding="10dp" android:background="@color/views_background" tools:ignore="RtlCompat" android:textSize="16sp" android:textColorHint="@color/grey" android:textColor="@color/darker_grey" android:textAlignment="textStart"  android:hint="إغلاق مفتاح الغاز لوقف تسريب الغاز" android:gravity="center_vertical" android:ems="10" android:drawableRight="@drawable/inss" android:drawablePadding="8dp" android:layout_marginTop="8dp" />

        <View android:layout_height="1px" android:layout_width="fill_parent" android:background="@color/white_greyish"/>

        <EditText android:focusable="false" android:inputType="textMultiLine" android:singleLine="false" android:layout_height="wrap_content" android:layout_width="fill_parent"  android:padding="10dp" android:background="@color/views_background" tools:ignore="RtlCompat" android:textSize="16sp" android:textColorHint="@color/grey" android:textColor="@color/darker_grey" android:textAlignment="textStart"  android:hint="في حال حدوث حريق لاسمح الله اتصل على الدفاع المدني 998" android:gravity="center_vertical" android:ems="10" android:drawableRight="@drawable/inss" android:drawablePadding="8dp" android:layout_marginTop="8dp" />

        <View android:layout_height="1px" android:layout_width="fill_parent" android:background="@color/white_greyish"/>



        <Button
            android:id="@+id/logOutBtn"
            android:layout_width="120dp"
            android:layout_height="35dp"
            android:background="@color/pink"
            android:layout_marginTop="120dp"
            android:layout_marginRight="190dp"
            android:backgroundTint="@color/pink"
            android:text="تسجيل الخروج"
            android:textColor="@color/colorPrimaryDark"
            android:textSize="16sp"
            android:textStyle="bold" />

    </LinearLayout>


</LinearLayout>