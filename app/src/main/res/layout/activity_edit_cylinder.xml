<?xml version="1.0" encoding="UTF-8"?>

<LinearLayout android:orientation="vertical" android:layout_height="fill_parent" android:layout_width="fill_parent" xmlns:tools="http://schemas.android.com/tools" xmlns:android="http://schemas.android.com/apk/res/android">

    <include layout="@layout/tool_bar" android:id="@+id/tool_bar"/>


    <LinearLayout android:orientation="vertical" android:layout_height="fill_parent" android:layout_width="fill_parent" android:padding="20dp" android:background="@drawable/background">

        <View android:layout_height="1px" android:layout_width="fill_parent" android:background="@color/white_greyish"/>

        <EditText android:layout_height="wrap_content" android:layout_width="fill_parent" android:id="@+id/NAME" android:padding="10dp" android:background="@color/views_background" tools:ignore="RtlCompat" android:textSize="16sp" android:textColorHint="@color/grey" android:textColor="@color/darker_grey" android:textAlignment="textStart" android:singleLine="true" android:text="اسم الأسطوانة: " android:gravity="center_vertical" android:ems="10" android:drawableRight="@drawable/cylinder" android:drawablePadding="8dp"  android:layout_marginTop="8dp" android:inputType="textPersonName"/>

        <View android:layout_height="1px" android:layout_width="fill_parent" android:background="@color/white_greyish"/>

        <EditText android:layout_height="wrap_content" android:layout_width="fill_parent" android:id="@+id/TYPE" android:padding="10dp" android:background="@color/views_background" tools:ignore="RtlCompat" android:textSize="16sp" android:textColorHint="@color/grey" android:textColor="@color/darker_grey" android:textAlignment="textStart" android:singleLine="true" android:text=" نوع الأسطوانة:" android:gravity="center_vertical" android:ems="10" android:drawableRight="@drawable/cylinder" android:drawablePadding="8dp"  android:layout_marginTop="8dp" android:inputType="textPersonName"/>

        <View android:layout_height="1px" android:layout_width="fill_parent" android:background="@color/white_greyish"/>


        <View android:layout_height="1px" android:layout_width="fill_parent" android:background="@color/white_greyish"/>


        <LinearLayout android:layout_marginTop="30dp" android:layout_gravity="left" android:orientation="horizontal" android:layout_height="wrap_content" android:layout_width="fill_parent">

            <Button
                android:id="@+id/edit"
                android:layout_width="120dp"
                android:layout_height="35dp"
                android:background="@color/pink"
                android:layout_marginTop="50dp"
                android:backgroundTint="@color/pink"
                android:text="حفظ"
                android:layout_marginRight="190dp"
                android:onClick="EditC"
                android:textColor="@color/colorPrimaryDark"
                android:textSize="16sp"
                android:layout_gravity="end"
                android:textStyle="bold" />

        </LinearLayout>


        <Button
            android:id="@+id/logOutBtn"
            android:layout_width="120dp"
            android:layout_height="35dp"
            android:background="@color/pink"
            android:layout_marginTop="180dp"
            android:layout_marginRight="190dp"
            android:backgroundTint="@color/pink"
            android:text="تسجيل الخروج"
            android:textColor="@color/colorPrimaryDark"
            android:textSize="16sp"
            android:textStyle="bold" />

    </LinearLayout>

</LinearLayout>