<?xml version="1.0" encoding="UTF-8"?>

    <android.support.constraint.ConstraintLayout tools:context="com.example.lenovo.maps.view_cylinder_list" android:layout_height="match_parent" android:layout_width="match_parent" xmlns:tools="http://schemas.android.com/tools" xmlns:app="http://schemas.android.com/apk/res-auto" xmlns:android="http://schemas.android.com/apk/res/android" android:background="@drawable/background">

    <include android:id="@+id/tool_bar" layout="@layout/tool_bar" />



    <LinearLayout android:layout_height="503dp" android:layout_width="match_parent" app:layout_constraintVertical_bias="1.0" app:layout_constraintTop_toTopOf="parent" app:layout_constraintStart_toStartOf="parent" app:layout_constraintHorizontal_bias="0.0" app:layout_constraintEnd_toEndOf="parent" app:layout_constraintBottom_toBottomOf="parent" android:orientation="vertical" android:background="@drawable/background" android:layout_marginTop="8dp" android:layout_marginStart="8dp" android:layout_marginEnd="8dp" android:layout_marginBottom="8dp">


        <TextView
            android:id="@+id/empty"
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:layout_gravity="center"
            android:text="" />

        <ListView android:layout_height="276dp" android:layout_width="match_parent" android:scrollbars="vertical" android:dividerHeight="3dp" android:divider="@android:color/white" android:layout_margin="15dp" android:layout_centerHorizontal="true" android:layout_alignParentTop="true" android:id="@+id/listTheCylnder"/>


        <Button
            android:id="@+id/add"
            android:layout_width="120dp"
            android:layout_height="35dp"
            android:background="@color/pink"
            android:layout_marginTop="85dp"
            android:layout_marginRight="190dp"
            android:layout_marginLeft="20dp"
            android:backgroundTint="@color/pink"
            android:text="إضافة اسطوانة"
            android:onClick="add"
            android:textColor="@color/colorPrimaryDark"
            android:textSize="16sp"
            android:textStyle="bold" />

        <Button
            android:id="@+id/logOutBtn"
            android:layout_width="120dp"
            android:layout_height="35dp"
            android:background="@color/pink"
            android:layout_marginTop="10dp"
            android:layout_marginRight="190dp"
            android:layout_marginLeft="20dp"
            android:backgroundTint="@color/pink"
            android:text="تسجيل الخروج"
            android:textColor="@color/colorPrimaryDark"
            android:textSize="16sp"
            android:textStyle="bold" />

</LinearLayout>



</android.support.constraint.ConstraintLayout>