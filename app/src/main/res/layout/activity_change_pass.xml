<?xml version="1.0" encoding="UTF-8"?>

    <LinearLayout android:orientation="vertical" android:layout_height="fill_parent" android:layout_width="fill_parent" xmlns:tools="http://schemas.android.com/tools" xmlns:android="http://schemas.android.com/apk/res/android">

    <include layout="@layout/tool_bar" android:id="@+id/tool_bar"/>


    <LinearLayout android:orientation="vertical" android:layout_height="fill_parent" android:layout_width="fill_parent" android:padding="30dp" android:background="@drawable/background">

    <EditText android:layout_height="wrap_content" android:layout_width="fill_parent" android:id="@+id/etPass" android:padding="10dp" android:background="@color/views_background" tools:ignore="RtlCompat" android:textSize="16sp" android:textColorHint="@color/grey" android:textColor="@color/darker_grey" android:textAlignment="textStart" android:singleLine="true" android:inputType="textPassword" android:hint="كلمة المرور الحالية" android:gravity="center_vertical" android:drawableRight="@drawable/blackpassword" android:drawablePadding="8dp" android:layout_marginTop="5dp"/>

    <View android:layout_height="1px" android:layout_width="fill_parent" android:background="@color/white_greyish"/>

    <EditText android:layout_height="wrap_content" android:layout_width="fill_parent" android:id="@+id/newPass" android:padding="10dp" android:background="@android:color/transparent" tools:ignore="RtlCompat" android:textSize="16sp" android:textColorHint="@color/grey" android:textColor="@color/darker_grey" android:textAlignment="textStart" android:singleLine="true" android:inputType="textPassword" android:hint="كلمة المرور الجديدة" android:gravity="center_vertical" android:drawableRight="@drawable/confirmpassword" android:drawablePadding="8dp" android:layout_marginTop="5dp"/>

    <Button android:layout_height="wrap_content"
        android:layout_width="115dp" android:id="@+id/btnChangePass" android:padding="3dp"
        android:background="@color/pink" android:backgroundTint="@color/pink"
        android:textSize="17sp" android:textColor="@color/colorPrimaryDark"
        android:layout_marginTop="100dp" android:layout_gravity="end"
        android:textStyle="bold" android:onClick="changePass" android:text="حفظ"/>

        <Button
            android:id="@+id/logOutBtn"
            android:layout_width="120dp"
            android:layout_height="35dp"
            android:background="@color/pink"
            android:layout_marginTop="150dp"
            android:layout_marginRight="190dp"
            android:backgroundTint="@color/pink"
            android:text="تسجيل الخروج"
            android:textColor="@color/colorPrimaryDark"
            android:textSize="16sp"
            android:textStyle="bold" />

</LinearLayout>

</LinearLayout>