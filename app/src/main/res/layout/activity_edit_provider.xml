<?xml version="1.0" encoding="UTF-8"?>

    <LinearLayout android:orientation="vertical" android:layout_height="fill_parent" android:layout_width="fill_parent" xmlns:tools="http://schemas.android.com/tools" xmlns:android="http://schemas.android.com/apk/res/android">

    <include layout="@layout/tool_bar" android:id="@+id/tool_bar"/>

    <LinearLayout android:orientation="vertical" android:layout_height="fill_parent" android:layout_width="fill_parent" android:background="@drawable/background" android:padding="20dp">

    <EditText android:layout_height="wrap_content" android:layout_width="fill_parent" android:id="@+id/etName" android:background="@color/views_background" android:padding="10dp" tools:ignore="RtlCompat" android:textSize="16sp" android:textColorHint="@color/grey" android:textColor="@color/darker_grey" android:textAlignment="textStart" android:singleLine="true" android:hint="الاسم" android:gravity="center_vertical" android:drawableRight="@drawable/blackuser" android:drawablePadding="8dp" android:layout_marginTop="8dp"/>

    <View android:layout_height="1px" android:layout_width="fill_parent" android:background="@color/white_greyish"/>

    <EditText android:layout_height="wrap_content" android:layout_width="fill_parent" android:id="@+id/Email" android:background="@color/views_background" android:padding="10dp" tools:ignore="RtlCompat" android:textSize="16sp" android:textColorHint="@color/grey" android:textColor="@color/darker_grey" android:textAlignment="textStart" android:singleLine="true" android:hint="البريد الإلكتروني" android:gravity="center_vertical" android:drawableRight="@drawable/blackemail" android:drawablePadding="8dp" android:layout_marginTop="5dp" android:inputType="textEmailAddress"/>

    <View android:layout_height="1px" android:layout_width="fill_parent" android:background="@color/white_greyish"/>

    <EditText android:layout_height="wrap_content" android:layout_width="fill_parent" android:id="@+id/etPhone" android:background="@color/views_background" android:padding="10dp" tools:ignore="RtlCompat" android:textSize="16sp" android:textColorHint="@color/grey" android:textColor="@color/darker_grey" android:textAlignment="textStart" android:singleLine="true" android:hint="رقم الجوال" android:gravity="center_vertical" android:drawableRight="@drawable/blackphone" android:drawablePadding="8dp" android:layout_marginTop="5dp" android:inputType="phone"/>

    <View android:layout_height="1px" android:layout_width="fill_parent" android:background="@color/white_greyish"/>

        <View android:layout_height="1px" android:layout_width="fill_parent" android:background="@color/white_greyish"/>


    <LinearLayout android:orientation="horizontal" android:layout_height="wrap_content" android:layout_width="fill_parent">

    <TextView android:layout_height="wrap_content" android:layout_width="fill_parent" android:id="@+id/textView9" android:background="@color/views_background" android:padding="10dp" tools:ignore="RtlCompat" android:textSize="16sp" android:textColor="@color/darker_grey" android:textAlignment="textStart" android:gravity="start|center_vertical" android:drawableRight="@drawable/workhours" android:drawablePadding="8dp" android:layout_marginTop="5dp" android:inputType="time" android:text=" أوقات العمل" android:layout_weight="1.5"/>

    <EditText android:layout_height="wrap_content" android:layout_width="fill_parent" android:id="@+id/startWork" android:background="@color/views_background" android:padding="14dp" tools:ignore="RtlCompat" android:textSize="16sp" android:textColorHint="@color/grey" android:textColor="@color/darker_grey" android:textAlignment="textStart" android:hint="من" android:gravity="center_vertical" android:layout_marginTop="5dp" android:inputType="time" android:layout_weight="2"/>

    <EditText android:layout_height="wrap_content" android:layout_width="fill_parent" android:id="@+id/endWork" android:background="@color/views_background" android:padding="13dp" tools:ignore="RtlCompat" android:textSize="16sp" android:textColorHint="@color/grey" android:textColor="@color/darker_grey" android:textAlignment="textStart" android:hint="إلى" android:gravity="center_vertical" android:layout_marginTop="5dp" android:inputType="time" android:layout_weight="2"/>

</LinearLayout>

    <View android:layout_height="1px" android:layout_width="fill_parent" android:background="@color/white_greyish"/>


    <LinearLayout android:orientation="horizontal" android:layout_height="wrap_content" android:layout_width="fill_parent">

    <TextView android:layout_height="wrap_content" android:layout_width="fill_parent" android:id="@+id/textView1" android:background="@color/views_background" android:padding="10dp" tools:ignore="RtlCompat" android:textSize="16sp" android:textColor="@color/darker_grey" android:textAlignment="textStart" android:gravity="start|center_vertical" android:drawableRight="@drawable/blacklocation" android:drawablePadding="8dp" android:layout_marginTop="5dp" android:inputType="time" android:text=" مشاركة موقع" android:layout_weight="1.5"/>


    <RadioGroup android:orientation="horizontal" android:layout_height="wrap_content" android:layout_width="fill_parent" android:id="@+id/radio" android:background="@color/views_background" android:padding="10dp" android:drawableRight="@drawable/blacklocation" android:layout_marginTop="5dp" android:text="مشاركة الموقع" android:layout_weight="1.5" android:checkedButton="@+id/radioNotShareLoc" android:layout_gravity="end">

    <RadioButton android:layout_height="wrap_content" android:layout_width="wrap_content" android:id="@+id/radioShareLoc" android:textSize="14sp" android:textColor="@color/darker_grey" android:gravity="right|center_vertical" android:text="نعم"/>

    <RadioButton android:layout_height="wrap_content" android:layout_width="wrap_content" android:id="@+id/radioNotShareLoc" android:textSize="14sp" android:textColor="@color/darker_grey" android:gravity="right|center_vertical" android:text="لا" android:checked="true"/>

</RadioGroup>

</LinearLayout>


        <LinearLayout
            android:layout_width="wrap_content"
            android:layout_height="28dp"
            android:layout_gravity="end"
            android:layout_marginBottom="0dp"
            android:layout_marginTop="120dp"
            android:layout_marginRight="110dp"
            android:orientation="horizontal">

            <Button

                android:id="@+id/changePassword"
                android:layout_width="wrap_content"
                android:layout_height="30dp"
                android:layout_gravity="end"
                android:layout_margin="10dp"
                android:background="@color/pink"
                android:backgroundTint="@color/pink"
                android:onClick="changePassword"
                android:padding="3dp"
                android:text="تغيير كلمة المرور"
                android:textColor="@color/colorPrimaryDark"
                android:textSize="17sp"
                android:textStyle="bold" />

            <Button
                android:id="@+id/btnEdit"
                android:layout_width="77dp"
                android:layout_height="30dp"
                android:layout_gravity="end"
                android:background="@color/pink"
                android:backgroundTint="@color/pink"
                android:padding="1dp"
                android:text="حفظ"
                android:onClick="save"
                android:textColor="@color/colorPrimaryDark"
                android:textSize="17sp"
                android:textStyle="bold" />

        </LinearLayout>

        <LinearLayout
            android:layout_width="wrap_content"
            android:layout_height="42dp"
            android:layout_gravity="end"
            android:layout_marginBottom="0dp"
            android:layout_marginTop="10dp"
            android:orientation="horizontal">

            <Button
                android:id="@+id/logOutBtn"
                android:layout_width="120dp"
                android:layout_height="35dp"
                android:layout_marginTop="0dp"
                android:background="@color/pink"
                android:backgroundTint="@color/pink"
                android:layout_marginRight="190dp"
                android:text="تسجيل الخروج"
                android:textColor="@color/colorPrimaryDark"
                android:textSize="16sp"
                android:textStyle="bold" />


        </LinearLayout>



</LinearLayout>

</LinearLayout>