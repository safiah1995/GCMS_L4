<?xml version="1.0" encoding="UTF-8"?>

    <RelativeLayout tools:ignore="ExtraText" tools:context="com.example.lenovo.maps.userPage" android:layout_height="match_parent" android:layout_width="match_parent" xmlns:tools="http://schemas.android.com/tools" xmlns:app="http://schemas.android.com/apk/res-auto" xmlns:android="http://schemas.android.com/apk/res/android" android:background="@drawable/wall1">


    <include
        android:id="@+id/tool_bar"
        layout="@layout/tool_bar"
        android:layout_alignParentStart="true"
        android:layout_below="@+id/welcomeTextV"
        android:layout_alignParentLeft="true" />

    <TextView
        android:id="@+id/welcomeTextV"
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:layout_alignParentStart="true"
        android:layout_alignParentTop="true"
        android:layout_marginTop="65dp"
        android:gravity="center"
        android:textColor="@android:color/holo_blue_dark"
        android:textSize="30sp" />


    <Button
        android:id="@+id/cylinderBtn"
        android:layout_width="150dp"
        android:layout_height="40dp"

        android:layout_alignParentTop="true"
        android:layout_centerHorizontal="true"
        android:layout_marginTop="113dp"
        android:background="@color/pink"
        android:backgroundTint="@color/pink"
        android:text="قائمة الاسطوانات"
        android:onClick="cylinderList"
        android:textColor="@color/colorPrimaryDark"
        android:textSize="18sp"
        android:textStyle="bold" />

    <Button
        android:id="@+id/searchProBtn"
        android:layout_width="150dp"
        android:layout_height="40dp"
        android:layout_alignParentTop="true"
        android:layout_centerHorizontal="true"
        android:layout_marginTop="164dp"
        android:background="@color/pink"
        android:backgroundTint="@color/pink"
        android:text="البحث عن موزع"
        android:textColor="@color/colorPrimaryDark"
        android:textSize="18sp"
        android:textStyle="bold" />

    <Button
        android:id="@+id/instrucBtn"
        android:layout_width="150dp"
        android:layout_height="40dp"
        android:layout_alignParentTop="true"
        android:layout_centerHorizontal="true"
        android:layout_marginTop="214dp"
        android:background="@color/pink"
        android:backgroundTint="@color/pink"
        android:onClick="ins"
        android:text="التعليمات"
        android:textColor="@color/colorPrimaryDark"
        android:textSize="18sp"
        android:textStyle="bold" />

    <Button
        android:id="@+id/button3"


        android:layout_width="150dp"
        android:layout_height="40dp"

        android:layout_centerInParent="true"
        android:background="@color/pink"
        android:backgroundTint="@color/pink"
        android:onClick="EditPage"
        android:text="تعديل البيانات"
        android:textColor="@color/colorPrimaryDark"
        android:textSize="18sp"
        android:textStyle="bold" />

    <Button
        android:id="@+id/logOutBtn"
        android:layout_width="120dp"
        android:layout_height="35dp"
        android:layout_alignParentBottom="true"
        android:layout_alignParentEnd="true"
        android:layout_marginBottom="44dp"
        android:layout_marginEnd="32dp"
        android:background="@color/pink"
        android:backgroundTint="@color/pink"
        android:text="تسجيل الخروج"
        android:textAlignment="center"
        android:textColor="@color/colorPrimaryDark"
        android:textSize="16sp"
        android:textStyle="bold"
        android:layout_alignParentRight="true"
        android:layout_marginRight="32dp" />

</RelativeLayout>

