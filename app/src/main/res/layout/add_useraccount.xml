<?xml version="1.0" encoding="utf-8"?>

    <LinearLayout android:orientation="vertical" android:layout_height="fill_parent" android:layout_width="fill_parent" xmlns:tools="http://schemas.android.com/tools" xmlns:android="http://schemas.android.com/apk/res/android">

    <include layout="@layout/tool_bar" android:id="@+id/tool_bar"/>

        <LinearLayout android:orientation="vertical" android:layout_height="fill_parent" android:layout_width="fill_parent" android:background="@drawable/background" android:padding="20dp">

            <EditText android:layout_height="wrap_content" android:layout_width="fill_parent" android:id="@+id/etName" android:background="@color/views_background" android:padding="10dp" tools:ignore="RtlCompat" android:textSize="16sp" android:textColorHint="@color/grey" android:textColor="@color/darker_grey" android:textAlignment="textStart" android:singleLine="true" android:hint="الاسم" android:gravity="center_vertical" android:drawableRight="@drawable/blackuser" android:drawablePadding="8dp" android:layout_marginTop="8dp"/>

            <View android:layout_height="1px" android:layout_width="fill_parent" android:background="@color/white_greyish"/>

            <EditText android:layout_height="wrap_content" android:layout_width="fill_parent" android:id="@+id/etEmail" android:background="@color/views_background" android:padding="10dp" tools:ignore="RtlCompat" android:textSize="16sp" android:textColorHint="@color/grey" android:textColor="@color/darker_grey" android:textAlignment="textStart" android:singleLine="true" android:hint="البريد الإلكتروني" android:gravity="center_vertical" android:drawableRight="@drawable/blackemail" android:drawablePadding="8dp" android:layout_marginTop="5dp" android:inputType="textEmailAddress"/>

            <View android:layout_height="1px" android:layout_width="fill_parent" android:background="@color/white_greyish"/>

            <EditText android:layout_gravity="right" android:layout_height="wrap_content" android:layout_width="fill_parent" android:id="@+id/etPass" android:padding="10dp" android:background="@color/views_background" tools:ignore="RtlCompat" android:textSize="16sp" android:textColorHint="@color/grey" android:textColor="@color/darker_grey" android:textAlignment="textStart" android:singleLine="true" android:inputType="textPassword" android:hint="كلمة المرور " android:gravity="end" android:drawableRight="@drawable/blackpassword" android:drawablePadding="8dp" android:layout_marginTop="5dp"/>

            <View android:layout_height="1px" android:layout_width="fill_parent" android:background="@color/white_greyish"/>

            <EditText android:layout_height="wrap_content" android:layout_width="fill_parent" android:id="@+id/etPhone" android:background="@color/views_background" android:padding="10dp" tools:ignore="RtlCompat" android:textSize="16sp" android:textColorHint="@color/grey" android:textColor="@color/darker_grey" android:textAlignment="textStart" android:singleLine="true" android:hint="رقم الجوال" android:gravity="right" android:drawableRight="@drawable/blackphone" android:drawablePadding="8dp" android:layout_marginTop="5dp" android:inputType="phone"/>


            <LinearLayout
                android:layout_width="wrap_content"
                android:layout_height="66dp"
                android:layout_gravity="left"
                android:layout_marginTop="185dp"
                android:orientation="horizontal">

                <Button
                    android:id="@+id/btnAdd"
                    android:layout_width="77dp"
                    android:layout_height="wrap_content"
                    android:layout_gravity="end"

                    android:layout_weight="4"
                    android:background="@color/pink"
                    android:backgroundTint="@color/pink"
                    android:onClick="register"
                    android:padding="1dp"
                    android:text="تسجيل"
                    android:textColor="@color/colorPrimaryDark"
                    android:textSize="17sp"
                    android:textStyle="bold" />

            </LinearLayout>

        </LinearLayout>

    </LinearLayout>
